<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="32dp"
    android:layout_marginTop="@dimen/common_dimen"
    android:background="@color/main_background"
    android:gravity="center_vertical"
    >

    <View
        android:layout_width="3dp"
        android:layout_height="16dp"
        android:layout_marginLeft="@dimen/common_dimen_tiny"
        android:layout_marginRight="@dimen/common_dimen_small"
        android:background="@drawable/bg_guide"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_guide_title"
        android:text="@string/aqi_guide"
        android:textSize="@dimen/text_size_medium"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        />
    <ImageView
        android:id="@+id/iv_guide_icon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        />

</LinearLayout>